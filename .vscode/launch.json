    "configurations": [
        {
            "name": "Debug Game",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/Project/Build/Debug/Game.exe",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/Project/Build/Debug",
            "environment": [],
            "externalConsole": false,
            "preLaunchTask": "CMake: Build Debug",
            "windows": {
                "MIMode": "gdb",
                "miDebuggerPath": "gdb"
            },
            "linux": {
                "program": "${workspaceFolder}/Project/Build/Debug/Game",
                "MIMode": "gdb",
                "miDebuggerPath": "/usr/bin/gdb",
                "setupCommands": [
                    {
                        "description": "Enable pretty-printing",
                        "text": "-enable-pretty-printing",
                        "ignoreFailures": true
                    }
                ]
            }
