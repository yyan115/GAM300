{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "CMake: Configure Debug",
            "type": "shell",
            "command": "cmake",
            "args": ["--preset", "debug"],
            "options": { "cwd": "${workspaceFolder}/Project" },
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "CMake: Build Debug",
            "type": "shell",
            "command": "cmake",
            "args": ["--build", "--preset", "debug", "-j"],
            "options": { "cwd": "${workspaceFolder}/Project" },
            "group": { "kind": "build", "isDefault": true },
            "problemMatcher": ["$gcc", "$msvc"],
            "dependsOn": "CMake: Configure Debug"
        },
        {
            "label": "CMake: Configure Release",
            "type": "shell",
            "command": "cmake",
            "args": ["--preset", "release"],
            "options": { "cwd": "${workspaceFolder}/Project" },
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "CMake: Build Release",
            "type": "shell",
            "command": "cmake",
            "args": ["--build", "--preset", "release", "-j"],
            "options": { "cwd": "${workspaceFolder}/Project" },
            "group": "build",
            "problemMatcher": ["$gcc", "$msvc"],
            "dependsOn": "CMake: Configure Release"
        },
        {
            "label": "CMake: Configure Editor Debug",
            "type": "shell",
            "command": "cmake",
            "args": ["--preset", "editor-debug"],
            "options": { "cwd": "${workspaceFolder}/Project" },
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "CMake: Build Editor Debug",
            "type": "shell",
            "command": "cmake",
            "args": ["--build", "--preset", "editor-debug", "-j"],
            "options": { "cwd": "${workspaceFolder}/Project" },
            "group": "build",
            "problemMatcher": ["$gcc", "$msvc"],
            "dependsOn": "CMake: Configure Editor Debug"
        },
        {
            "label": "CMake: Configure Editor Release",
            "type": "shell",
            "command": "cmake",
            "args": ["--preset", "editor-release"],
            "options": { "cwd": "${workspaceFolder}/Project" },
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "CMake: Build Editor Release",
            "type": "shell",
            "command": "cmake",
            "args": ["--build", "--preset", "editor-release", "-j"],
            "options": { "cwd": "${workspaceFolder}/Project" },
            "group": "build",
            "problemMatcher": ["$gcc", "$msvc"],
            "dependsOn": "CMake: Configure Editor Release"
        },
        {
            "label": "Clean All Builds",
            "type": "shell",
            "command": "rm",
            "args": ["-rf", "Project/Build"],
            "windows": {
                "command": "cmd",
                "args": ["/c", "rmdir", "/s", "/q", "Project\\Build"]
            },
            "group": "build",
            "problemMatcher": []
        }
    ]
}
