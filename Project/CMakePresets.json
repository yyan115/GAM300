{
    "version": 3,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 20,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "base",
            "hidden": true,
            "description": "Base configuration with vcpkg integration",
            "cacheVariables": {
                "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/../vcpkg/scripts/buildsystems/vcpkg.cmake",
                "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
                "VCPKG_TARGET_TRIPLET": "x64-windows"
            }
        },
        {
            "name": "ninja-base",
            "hidden": true,
            "inherits": "base",
            "description": "Ninja generator for fast parallel builds (recommended for all platforms)",
            "generator": "Ninja"
        },
        {
            "name": "debug",
            "displayName": "Build Game (Debug)",
            "description": "Game executable - Debug build",
            "inherits": "ninja-base",
            "binaryDir": "${sourceDir}/Build/Intermediate/Debug",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "OUTPUT_DIR": "${sourceDir}/Build/Debug"
            }
        },
        {
            "name": "release",
            "displayName": "Build Game (Release)",
            "description": "Game executable - Release build",
            "inherits": "ninja-base",
            "binaryDir": "${sourceDir}/Build/Intermediate/Release",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "OUTPUT_DIR": "${sourceDir}/Build/Release"
            }
        },
        {
            "name": "editor-debug",
            "displayName": "Build Editor (Debug)",
            "description": "Editor executable - Debug build",
            "inherits": "ninja-base",
            "binaryDir": "${sourceDir}/Build/Intermediate/EditorDebug",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "EditorDebug",
                "OUTPUT_DIR": "${sourceDir}/Build/EditorDebug"
            }
        },
        {
            "name": "editor-release",
            "displayName": "Build Editor (Release)",
            "description": "Editor executable - Release build",
            "inherits": "ninja-base",
            "binaryDir": "${sourceDir}/Build/Intermediate/EditorRelease",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "EditorRelease",
                "OUTPUT_DIR": "${sourceDir}/Build/EditorRelease"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "debug",
            "configurePreset": "debug",
            "displayName": "Build Game (Debug)",
            "jobs": 4
        },
        {
            "name": "release",
            "configurePreset": "release",
            "displayName": "Build Game (Release)",
            "jobs": 4
        },
        {
            "name": "editor-debug",
            "configurePreset": "editor-debug",
            "displayName": "Build Editor (Debug)",
            "jobs": 4
        },
        {
            "name": "editor-release",
            "configurePreset": "editor-release",
            "displayName": "Build Editor (Release)",
            "jobs": 4
        }
    ]
}
